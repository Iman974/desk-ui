{
  "name": "desk-ui",
  "description": "HTML front-end for visualization (3D objects and medical images)",
  "author": "Sebastien Valette <sebastien.valette@creatis.insa-lyon.fr> (http://www.creatis.insa-lyon.fr/~valette)",
  "license": "CECILL-B",
  "version": "2.0.4",
  "repository": {
    "type": "git",
    "url": "git://github.com/valette/desk-ui.git"
  },
  "main": "build/index.html",
  "dependencies": {
    "fs-extra": "8.1.0",
    "shelljs": "0.8.3"
  },
  "devDependencies": {
    "ace-builds": "1.4.6",
    "async": "3.1.0",
    "bluebird": "3.5.5",
    "c3": "0.7.8",
    "chalk": "2.4.2",
    "css-loader": "3.2.0",
    "d3": "5.12.0",
    "heap": "0.2.6",
    "jssha": "2.3.1",
    "jstat": "1.9.1",
    "kdt": "0.1.0",
    "lodash": "4.17.15",
    "numeric": "1.2.6",
    "operative": "0.4.6",
    "@qooxdoo/compiler": "1.0.0-beta.20190917-1105",
    "random-js": "2.1.0",
    "socket.io-client": "2.2.0",
    "style-loader": "1.0.0",
    "terser": "4.3.1",
    "three": "0.108.0",
    "ttest": "1.1.0",
    "url-loader": "2.1.0",
    "webpack": "4.40.2",
    "webpack-cli": "3.3.9",
    "webworkify-webpack": "2.1.5",
    "xterm": "4.0.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run qooxdoo && npm run bundle",
    "buildAddons": "node source/buildAddons.js",
    "bundle": "webpack && npm run terser",
    "clean": "rm -rf build && rm -rf source-output",
    "compile": "qx compile --target source && qx compile --target build",
    "qooxdoo": "qx pkg update && qx pkg install && npm run compile",
    "terser": "terser source-output/desk-ui/bundle.js --mangle -o build/desk-ui/bundle.js",
    "updateAll": "npm run updateQooxdoo && rm -rf node_modules && git pull && npm install && npm run build",
    "updateQooxdoo": "cd qooxdoo && git pull && cd .."
  }
}
